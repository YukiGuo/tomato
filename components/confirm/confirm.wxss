/* components/confirm/confirm.wxss */
.wrapper{
  width: 90%;
margin-left:auto;
margin-right: auto; 
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  padding: 20rpx 10rpx 0;
  background: #fff;
  box-shadow: 0 0 5px rgba(0,0,0,0.3)
}
.content textarea{
  padding: 10rpx;
  height: 140rpx;
  background: #eee;
  border-radius: 16rpx;

}
.action{
  width: 100%;
  display: flex;
  padding: 16rpx;
  text-align: center;
}
.action view{width:50%;}
.action view:first-child{
  border-right: 1px solid #d81e06;
}
.active{color:#d81e06 }
